{
    "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "strict": true,                        
    "noImplicitAny": false,                 
    "allowJs": true,                       
    "skipLibCheck": true,                   
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2021"]
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

